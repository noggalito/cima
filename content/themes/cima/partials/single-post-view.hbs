<div class="blog-content-section">
  <div class="single-post-view container">
    <div class="row">
      <div class="col-md-8 col-sm-8 col-sm-offset-0 col-xs-10 col-xs-offset-1">
        <h1 class="title">{{title}}</h1>
        <img src="{{image}}" class="img-responsive" />
        <div class="figure-legend clearfix">
          <div class="col-md-4">
            por: {{#author}}{{name}}{{/author}}
          </div>
          <div class="col-md-4">
            {{date published_at format="D MMMM, YYYY"}}
          </div>
          <div class="col-md-4">
            <!-- share with SN -->
          </div>
        </div>
        <div class="content">{{content}}</div>

        {{> single-post-recent-posts}}
      </div>
      <div class="col-md-4 col-sm-4 col-sm-offset-0 col-xs-10 col-xs-offset-1">
        <div class="searchbox">
          <form>
            <input type="search" name="q" value="">
            <input type="submit" value="Buscar">
          </form>
        </div>

        <div class="other-categories">
          <div class="divider">
            <h2>Categor√≠as</h2>
          </div>
          {{> navigation-blog}}
        </div>
      </div>
    </div>
  </div>
</div>
