<div class="logo-Contactos-wrapper">
  <!--
    this form is handled by a third party service.
    your token needs to match your referrer's request
    so it may not work on local/dev/staging
  -->
  <div class="hidden">
    <img src="https://mrthomas.herokuapp.com/keepalive" />
    <script src="https://mrthomas.herokuapp.com/api/v1/recaptcha.js" async defer></script>
  </div>
  <form data-toggle="validator" action="https://mrthomas.herokuapp.com/api/v1/notification" method="POST" role="form" >
    <input type="hidden" name="token" value="52632e8b351609ab36750783fb8bab9187d5f1843b627efa13477b1e2c9069ae">
    {{#get "posts" filter="slug:contactos" as |contacts|}}
      {{#contacts}}
        <div class="contacts">
          <img src="{{image}}">
          <div class="title-contacts">
            <div>{{title}}</div>
          </div>
          <div class="content-contacts">{{content}}</div>
        </div>
      {{/contacts}}
    {{/get}}
    <div class="form-group">
      <input type="text" class="form-control" id="nameInput" placeholder="nombre" name="nombre" required>
    </div>
    <div class="form-group">
      <input type="email" class="form-control" id="emailInput" placeholder="e-mail" name="email" required>
    </div>
    <div class="form-group">
      <textarea class="form-control" id="mensajeTextarea" rows="3" placeholder="mensaje" name="mensaje" required ></textarea>
    </div>
    <div class="g-recaptcha form-group"></div>
    <div class="help-block with-errors"></div>
    <button type="submit" class="btn btn-primary">
      <span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span>
      enviar
    </button>
  </form>
</div>
